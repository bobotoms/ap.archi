{% extends "BackOfficeBundle::layout.html.twig" %}


{% block body %}

<br/>


    	<p style="width:100%; text-align: center"><a style="text-align:center" href="{{  path('package_list') }}" >Packages</a></p>
    	
    	<p style="width:100%; text-align: center"><a style="text-align:center" href="{{  path('accommodation_list') }}" >Hebergements</a></p>
    	
