{% extends "BackOfficeBundle::layout.html.twig" %}


{% block body %}

<br/>
<t1>Liste des bateaux</t1>

    	<p style="width:100%; text-align: center"><a style="text-align:center" href="{{  path('package_list') }}" >Packages</a></p>
    	
    	<p style="width:100%; text-align: center"><a style="text-align:center" href="{{  path('accommodation_list') }}" >Hebergements</a></p>
    	
    	<p style="width:100%; text-align: center"><a style="text-align:center" href="{{  path('diving_center_list') }}" >Centres de plong√©es</a></p>
    	
    	<p style="width:100%; text-align: center"><a style="text-align:center" href="{{  path('boat_list') }}" >Bateaux</a></p>
    	
    	</br>
<div class="container">
	<table id="boatlist" class="display">
        <thead>
        <tr>
            <th>Id Surfprice</th>
            <th>Nom</th>
            <th>Info</th>
            <th>Prestations</th>
            <th>Option</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
        {% for boat in boats %}
            <tr>
                <td> {{ boat.surfpriceId }}</td>
                <td> {{ boat.name }}</td>
                <td> {% if boat.info is defined %}{# boat.info.description #}{% endif %}</td>
                <td>{% if boat.providers is defined %}
                    		{% for provider in boat.providers %}
                    		{{ boat.name }}<br/>
                    		{% endfor %}
					{% endif %}
				</td>
				<td>{% if boat.boatOption is defined %}
                    		{% for option in boat.boatOption %}
                    		{{ option.name }}<br/>
                    		{% endfor %}
					{% endif %}
				</td>
				<td>{{ boat.description }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
   
<script type="text/javascript">
	$(document).ready( function () {
	    $('#boatlist').DataTable({
	    "language": {
	    "sProcessing":     "Traitement en cours...",
	    "sSearch":         "Rechercher&nbsp;:",
